{
  "verbose": true,
  "clearMocks": true,
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "collectCoverageFrom": [
    "**/*.{js,jsx}",
    "!**/index.js",
    "!**/*stories.{js,jsx}",
    "!**/routes.js",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/coverage/**",
    "!**/webpack**",
    "!**/__mocks__/**"
  ],
  "setupFilesAfterEnv": ["<rootDir>/setupTests.js"],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "moduleNameMapper": {
    "^.+\\.(css|scss)$": "<rootDir>/src/__mocks__/styleMock.js",
    "^.+\\.(gif|ttf|eot|svg|png)$": "<rootDir>/src/__mocks__/fileMock.js"
  }
}
