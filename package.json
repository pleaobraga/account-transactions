{
  "name": "react-scaffold",
  "version": "1.0.0",
  "author": "pleaobraga",
  "license": "ISC",
  "description": "React boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open --config ./config/webpack.dev.js",
    "build": "webpack --config ./config/webpack.prod.js",
    "test": "jest --config jest.config.json --no-cache --verbose",
    "test:watch": "npm run test --  --watchAll",
    "test:update": "npm run test -- -u",
    "test:coverage": "npm run test -- --coverage --colors",
    "lint": "esw . --ext .js,.jsx  --color ",
    "lint:watch": "npm run lint -- --watch",
    "storybook": "start-storybook -p 9000 -c .storybook -s ./public "
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "browserslist": [
    "last 4 version"
  ],
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.3",
    "@storybook/addon-info": "^5.1.3",
    "@storybook/addon-knobs": "^5.1.3",
    "@storybook/addon-links": "^5.1.3",
    "@storybook/react": "^5.1.3",
    "autoprefixer": " 9.8.6 ",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-preset-react-app": "^9.0.0",
    "clean-webpack-plugin": "^2.0.2",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-watch": "^5.1.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^4.0.2",
    "react-scripts": "^3.0.1",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^7.1.0",
    "storybook": "^1.0.0",
    "storybook-addon-redux-listener": "^0.1.7",
    "style-loader": "^0.23.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "express": "^4.17.1",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  }
}
